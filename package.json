{
  "name": "screen-intelligence-service",
  "version": "1.0.0",
  "description": "Screen Intelligence MCP service with visual overlays for ThinkDrop AI",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "screen-intelligence",
    "accessibility",
    "ui-automation",
    "overlay",
    "mcp",
    "thinkdrop"
  ],
  "author": "ThinkDrop AI Team",
  "license": "MIT",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "chrome-remote-interface": "^0.33.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "duckdb": "latest",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "lru-cache": "^11.2.2",
    "playwright": "^1.56.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
